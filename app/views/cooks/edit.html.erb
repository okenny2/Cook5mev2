<!-- Validation failure messages -->

<% if @cook.errors.any? %>
  <% @cook.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Cook #<%= @cook.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_cook/<%= @cook.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @cook.name %>">
            </div>
          </div>

          <!-- Label and input for language -->
          <div class="form-group">
            <label for="language" class="col-sm-2 control-label">
              Language
            </label>
            <div class="col-sm-10">
              <input type="text" id="language" name="language" placeholder="Language" class="form-control" value="<%= @cook.language %>">
            </div>
          </div>

          <!-- Label and input for passion -->
          <div class="form-group">
            <label for="passion" class="col-sm-2 control-label">
              Passion
            </label>
            <div class="col-sm-10">
              <input type="text" id="passion" name="passion" placeholder="Passion" class="form-control" value="<%= @cook.passion %>">
            </div>
          </div>

          <!-- Label and input for diet_id -->
          <div class="form-group">
            <label for="diet_id" class="col-sm-2 control-label">
              Diet
            </label>
            <div class="col-sm-10">
              <%= select_tag(:diet_id, options_from_collection_for_select(Diet.all, :id, :name, @cook.diet_id), :class => "form-control") %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Cook
              </button>
              or
              <a href="/cooks/<%= @cook.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
