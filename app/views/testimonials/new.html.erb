<!-- Validation failure messages -->

<% if @testimonial.errors.any? %>
  <% @testimonial.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Testimonial</h3>
      </div>
      <div class="panel-body">
        <form action="/create_testimonial" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

       
          <!-- Label and input for cust_story -->
          <div class="form-group">
            <label for="cust_story" class="col-sm-2 control-label">
              Cust story
            </label>
            <div class="col-sm-10">
              <input type="text" id="cust_story" name="cust_story" placeholder="Cust story" class="form-control" value="<%= @testimonial.cust_story %>">
            </div>
          </div>

          <!-- Label and input for cook_id -->
          <div class="form-group">
            <label for="cook_id" class="col-sm-2 control-label">
              Cook
            </label>
            <div class="col-sm-10">
            <%= select_tag(:cook_id, options_from_collection_for_select(Cook.all, :id, :name, @testimonial.cook_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for cook_story -->
          <div class="form-group">
            <label for="cook_story" class="col-sm-2 control-label">
              Cook story
            </label>
            <div class="col-sm-10">
              <input type="text" id="cook_story" name="cook_story" placeholder="Cook story" class="form-control" value="<%= @testimonial.cook_story %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Testimonial
              </button>
              or
              <a href="/testimonials">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
